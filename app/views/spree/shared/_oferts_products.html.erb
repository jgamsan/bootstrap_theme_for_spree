<h4>Ofert products</h4><br />
<ul class="thumbnails">

  <% @products.each do |product| %>
    <li class="span2">
      <div class="thumbnail">
        <%= link_to small_image(product, :itemprop => "image"), product, :itemprop => 'url' %>
        <div class="caption">
          <h5><%= link_to truncate(product.name, :length => 50), product, :class => 'info', :itemprop => "name", :title => product.name %></h5> Price: <%= number_to_currency product.price %><br /><br />
        </div>
      </div>
    </li>
  <% end %>

</ul>
